<Window x:Class="Nhóm_7.KhungApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Thú Cưng" Width="1200" Height="760"
        WindowStartupLocation="CenterScreen"
        Background="#F6F7FB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- ===== LIGHT PALETTE ===== -->
        <Color x:Key="Bg">#F6F7FB</Color>
        <Color x:Key="Surface">#FFFFFF</Color>
        <Color x:Key="Card">#FFFFFF</Color>
        <Color x:Key="Stroke">#E6E8F0</Color>
        <Color x:Key="Text">#111827</Color>
        <Color x:Key="Text2">#6B7280</Color>

        <!-- Accent chính -->
        <Color x:Key="Accent">#6D28D9</Color>

        <SolidColorBrush x:Key="BgBrush" Color="{StaticResource Bg}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
        <SolidColorBrush x:Key="CardBrush" Color="{StaticResource Card}"/>
        <SolidColorBrush x:Key="StrokeBrush" Color="{StaticResource Stroke}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>
        <SolidColorBrush x:Key="Text2Brush" Color="{StaticResource Text2}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

        <!-- Shadow nhẹ, kiểu card -->
        <DropShadowEffect x:Key="SoftShadow" BlurRadius="18" ShadowDepth="4" Opacity="0.10" Color="#000000"/>

        <!-- Typography -->
        <Style x:Key="H1" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="Sub" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text2Brush}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Nav button -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="12,6,12,0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" CornerRadius="12" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{StaticResource Text2Brush}"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#F2F3F8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#EDEFFC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="R" CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.86"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubtleButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="#F6F7FB"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="R" CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="R" Property="Background" Value="#F2F3F8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="R" Property="Background" Value="#EDEFFC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pill -->
        <Style x:Key="Pill" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#F6F7FB"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource StrokeBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Padding="18"
                        BorderBrush="{StaticResource StrokeBrush}" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="38" Height="38" CornerRadius="12" Background="{StaticResource AccentBrush}">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White"
                                           FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="Quản Lý Thú Cưng" Foreground="{StaticResource TextBrush}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="WPF • MVVM" Foreground="{StaticResource Text2Brush}" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Margin="0,10,0,0">
                    <!-- Chỉ đổi Content sang tiếng Việt, giữ nguyên Command -->
                    <Button Style="{StaticResource NavButtonStyle}" Content="Tổng quan"           Tag="" Command="{Binding ShowDashboardCommand}"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="Quản lý thú cưng"     Tag="" Command="{Binding ShowPetsCommand}"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="Quản lý chủ nuôi"     Tag="" Command="{Binding ShowOwnersCommand}"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="Lịch hẹn"             Tag="" Command="{Binding ShowAppointmentsCommand}"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="Tiêm phòng"           Tag="" Command="{Binding ShowVaccinationsCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main -->
        <Grid Grid.Column="1" Margin="22,18,22,18">
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Topbar -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource StrokeBrush}" BorderThickness="1"
                    CornerRadius="18" Padding="18" Effect="{StaticResource SoftShadow}" Margin="0,0,0,606" Grid.RowSpan="2">
                <DockPanel>
                    <StackPanel>
                        <!-- PageTitle bạn vẫn bind VM, VM muốn hiển thị tiếng Việt thì set trong VM -->
                        <TextBlock Text="{Binding PageTitle}" Style="{StaticResource H1}"/>
                        <TextBlock Style="{StaticResource Sub}"/>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border CornerRadius="14" Background="#F6F7FB"
                                BorderBrush="{StaticResource StrokeBrush}" BorderThickness="1"
                                Padding="10,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource Text2Brush}" Margin="0,0,8,0"/>
                                <TextBlock Text="Quản trị" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Width="40" Height="40" CornerRadius="14" Background="{StaticResource AccentBrush}">
                            <TextBlock Text="KA" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Border>

            <ContentControl Grid.Row="1" Margin="0,16,0,0" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>
