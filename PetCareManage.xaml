<Window x:Class="Nhóm_7.PetCareManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Thú cưng"
        Height="540" Width="980"
        WindowStartupLocation="CenterScreen"
        Background="#EEF2F7">
    <Window.Resources>
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="95"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0"
                   Text="🐾 HỆ THỐNG QUẢN LÝ THÚ CƯNG"
                   Style="{StaticResource TitleText}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,18"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="18"
                    Margin="5">

                <StackPanel>

                    <TextBlock Text="Thông tin thú cưng"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,14"/>


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Tên thú cưng:"
                                   Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 x:Name="txtName" Margin="0,4,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Loài:"
                                   Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 x:Name="txtSpecies" Margin="0,4,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Giống:"
                                   Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 x:Name="txtBreed" Margin="0,4,0,8"/>

                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Giới tính:"
                                   Style="{StaticResource LabelText}"/>
                        <ComboBox Grid.Row="3" Grid.Column="1"
                                  x:Name="cbSex" Margin="0,4,0,8">
                            <ComboBoxItem Content="Đực"/>
                            <ComboBoxItem Content="Cái"/>
                        </ComboBox>

                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Chủ nuôi:"
                                   Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 x:Name="txtOwner" Margin="0,4,0,8"/>
                    </Grid>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">

                        <Button Content="Thêm mới"
                                Background="#2ECC71"
                                Foreground="White"
                                Click="BtnAdd_Click"/>

                        <Button Content="Cập nhật"
                                Background="#3498DB"
                                Foreground="White"
                                Click="BtnEdit_Click"/>

                        <Button Content="Xoá"
                                Background="#E74C3C"
                                Foreground="White"
                                Click="BtnDelete_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>


            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="12"
                    Padding="18"
                    Margin="5">

                <DockPanel>


                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal"
                                Margin="0,0,0,14">

                        <TextBox x:Name="txtSearch"
                                 Width="260"
                                 Margin="0,0,10,0"/>

                        <Button Content="Tìm kiếm"
                                Background="#9B59B6"
                                Foreground="White"
                                Click="BtnSearch_Click"/>

                        <Button Content="Làm mới"
                                Background="#95A5A6"
                                Foreground="White"
                                Click="BtnReset_Click"/>
                    </StackPanel>


                    <DataGrid x:Name="dgPets"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              SelectionChanged="dgPets_SelectionChanged"
                              RowHeight="32"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="#FAFAFA">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Loài" Binding="{Binding Species}" Width="*"/>
                            <DataGridTextColumn Header="Giống" Binding="{Binding Breed}" Width="*"/>
                            <DataGridTextColumn Header="Giới tính" Binding="{Binding Sex}" Width="*"/>
                            <DataGridTextColumn Header="Chủ nuôi" Binding="{Binding Owner}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>