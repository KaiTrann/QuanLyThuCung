<Window x:Class="Nhóm_7.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin tài khoản"
        Width="480"
        Height="360"
        WindowStartupLocation="CenterOwner"
        Background="#F6F7FB"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <Color x:Key="Stroke">#E6E8F0</Color>
        <Color x:Key="Text">#111827</Color>
        <Color x:Key="Text2">#6B7280</Color>
        <Color x:Key="Accent">#6D28D9</Color>

        <SolidColorBrush x:Key="StrokeBrush" Color="{StaticResource Stroke}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>
        <SolidColorBrush x:Key="Text2Brush" Color="{StaticResource Text2}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

        <DropShadowEffect x:Key="SoftShadow"
                          BlurRadius="18"
                          ShadowDepth="4"
                          Opacity="0.10"
                          Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="R"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel>
                    <TextBlock Text="Thông tin tài khoản"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>

                    <TextBlock Text="Thông tin tài khoản đang đăng nhập."
                               FontSize="12"
                               Margin="0,6,0,0"
                               Foreground="{StaticResource Text2Brush}"/>
                </StackPanel>

                <!-- Info -->
                <StackPanel Grid.Row="2">

                    <TextBlock Text="Tên đăng nhập"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Text2Brush}"/>
                    <TextBlock x:Name="txtUsername"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,4,0,12"
                               Foreground="{StaticResource TextBrush}"/>

                    <TextBlock Text="Họ tên"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Text2Brush}"/>
                    <TextBlock x:Name="txtFullName"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,4,0,12"
                               Foreground="{StaticResource TextBrush}"/>

                    <TextBlock Text="Vai trò"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Text2Brush}"/>
                    <TextBlock x:Name="txtRole"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,4,0,0"
                               Foreground="{StaticResource TextBrush}"/>

                </StackPanel>

                <!-- Close button -->
                <Button Grid.Row="4"
                        Content="Đóng"
                        Style="{StaticResource AccentButton}"
                        Click="BtnClose_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>