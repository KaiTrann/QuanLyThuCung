<Window x:Class="PetCareManager.WinUI.OwnersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Chủ nuôi" Height="720" Width="1120"
        WindowStartupLocation="CenterScreen"
        Background="#FFF6F7FB">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="14" Padding="16" BorderBrush="#FFE6E8F0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="520"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Quản lý Chủ nuôi" FontSize="22" FontWeight="SemiBold" Foreground="#FF111827"/>
                    <TextBlock Text="CRUD chủ nuôi (Họ tên / SĐT / Địa chỉ)"
                               Margin="0,6,0,0" FontSize="12" Foreground="#FF6B7280"/>
                </StackPanel>

                <!-- Search + Refresh -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="#FFF9FAFC" BorderBrush="#FFE6E8F0" BorderThickness="1" CornerRadius="10" Padding="10">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="🔎" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSearch"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="13"
                                     VerticalContentAlignment="Center"
                                     Height="26"
                                     ToolTip="Tìm theo tên hoặc SĐT"/>
                        </DockPanel>
                    </Border>

                    <Button Grid.Column="2" Height="40"
                            Content="Tìm kiếm"
                            FontSize="13" FontWeight="SemiBold"
                            Background="#FF2563EB" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"
                            Margin="0,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Table -->
            <Border Grid.Column="0" Background="White" CornerRadius="14" BorderBrush="#FFE6E8F0" BorderThickness="1" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Danh sách Chủ nuôi" FontSize="16" FontWeight="SemiBold" Foreground="#FF111827"/>

                        <!-- Optional: quick info -->
                        <Border Grid.Column="1" Background="#FFF3F4F6" CornerRadius="10" Padding="10,6" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tổng: " Foreground="#FF374151"/>
                                <TextBlock Text="0" FontWeight="SemiBold" Foreground="#FF111827"/>
                                <TextBlock Text=" chủ nuôi" Foreground="#FF374151"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <DataGrid Grid.Row="2"
                              x:Name="dgOwners"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowHeight="38"
                              ColumnHeaderHeight="38"
                              Background="White"
                              BorderThickness="0"
                              AlternatingRowBackground="#FFF9FAFC">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FF374151"/>
                                <Setter Property="Background" Value="#FFF3F4F6"/>
                                <Setter Property="BorderBrush" Value="#FFE6E8F0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Foreground" Value="#FF111827"/>
                                <Setter Property="BorderBrush" Value="#FFE6E8F0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- Cột: bạn có thể bind theo ViewModel sau -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã" Width="140" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Họ tên" Width="220" Binding="{Binding FullName}"/>
                            <DataGridTextColumn Header="SĐT" Width="140" Binding="{Binding Phone}"/>
                            <DataGridTextColumn Header="Địa chỉ" Width="*" Binding="{Binding Address}"/>

                            <!-- Optional: PetCount -->
                            <DataGridTextColumn Header="Số Pet" Width="90" Binding="{Binding PetCount}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Hint footer -->
                    <TextBlock Grid.Row="3"
                               Text="Tip: Click 1 dòng để nạp dữ liệu sang form bên phải (khi bạn gắn code/VM)."
                               Margin="2,10,2,0" FontSize="12" Foreground="#FF6B7280"/>
                </Grid>
            </Border>

            <!-- Right: Editor -->
            <Border Grid.Column="2" Background="White" CornerRadius="14" BorderBrush="#FFE6E8F0" BorderThickness="1" Padding="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="18"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Thông tin Chủ nuôi" FontSize="16" FontWeight="SemiBold" Foreground="#FF111827"/>

                    <!-- FullName -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Họ tên" FontSize="12" Foreground="#FF6B7280" Margin="2,0,0,6"/>
                        <Border Background="#FFF9FAFC" BorderBrush="#FFE6E8F0" BorderThickness="1" CornerRadius="10" Padding="10">
                            <TextBox x:Name="txtFullName"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="13"
                                     Height="26"
                                     VerticalContentAlignment="Center"
                                     ToolTip="Nhập họ tên chủ nuôi"/>
                        </Border>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Số điện thoại" FontSize="12" Foreground="#FF6B7280" Margin="2,0,0,6"/>
                        <Border Background="#FFF9FAFC" BorderBrush="#FFE6E8F0" BorderThickness="1" CornerRadius="10" Padding="10">
                            <TextBox x:Name="txtPhone"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="13"
                                     Height="26"
                                     VerticalContentAlignment="Center"
                                     ToolTip="Nhập số điện thoại"/>
                        </Border>
                    </StackPanel>

                    <!-- Address -->
                    <StackPanel Grid.Row="6">
                        <TextBlock Text="Địa chỉ" FontSize="12" Foreground="#FF6B7280" Margin="2,0,0,6"/>
                        <Border Background="#FFF9FAFC" BorderBrush="#FFE6E8F0" BorderThickness="1" CornerRadius="10" Padding="10">
                            <TextBox x:Name="txtAddress"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="13"
                                     Height="80"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalContentAlignment="Top"
                                     ToolTip="Nhập địa chỉ"/>
                        </Border>
                    </StackPanel>

                    <!-- Buttons row 1 -->
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnAdd" Content="➕ Thêm"
                                Height="42"
                                Background="#FF16A34A" Foreground="White"
                                FontSize="13" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnEdit" Grid.Column="2" Content="✏️ Sửa"
                                Height="42"
                                Background="#FFF59E0B" Foreground="#FF111827"
                                FontSize="13" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Buttons row 2 -->
                    <Grid Grid.Row="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnDelete" Content="🗑️ Xoá"
                                Height="42"
                                Background="#FFEF4444" Foreground="White"
                                FontSize="13" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnClear" Grid.Column="2" Content="🧹 Clear"
                                Height="42"
                                Background="#FFF3F4F6" Foreground="#FF111827"
                                FontSize="13" FontWeight="SemiBold"
                                BorderBrush="#FFE6E8F0" BorderThickness="1"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
