<Window x:Class="Nhóm_7.OwnersWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Quản lý Chủ nuôi" Height="720" Width="1120"
    WindowStartupLocation="CenterScreen"
    Background="#FFF6F7FB">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0" Background="White" CornerRadius="14"
            Padding="16" BorderBrush="#FFE6E8F0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="520"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Quản lý Chủ nuôi"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Foreground="#FF111827"/>
                </StackPanel>

                <!-- SEARCH -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="#FFF9FAFC"
                        BorderBrush="#FFE6E8F0"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10">
                        <DockPanel>
                            <TextBlock Text="🔎"
                                   FontSize="14"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSearch"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="13"
                                 VerticalContentAlignment="Center"
                                 Height="26"
                                 ToolTip="Tìm theo tên hoặc SĐT"/>
                        </DockPanel>
                    </Border>

                    <!-- THÊM EVENT CLICK -->
                    <Button Grid.Column="2"
                        Height="40"
                        Content="Tìm kiếm"
                        Click="BtnSearch_Click"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#FF2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- ================= BODY ================= -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- ========== LEFT TABLE ========== -->
            <Border Grid.Column="0"
                Background="White"
                CornerRadius="14"
                BorderBrush="#FFE6E8F0"
                BorderThickness="1"
                Padding="12">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                           Text="Danh sách Chủ nuôi"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#FF111827"/>

                    <!-- THÊM EVENT SelectionChanged -->
                    <DataGrid Grid.Row="2"
                          x:Name="dgOwners"
                          SelectionChanged="DgOwners_SelectionChanged"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeight="38"
                          ColumnHeaderHeight="38"
                          Background="White"
                          BorderThickness="0"
                          AlternatingRowBackground="#FFF9FAFC">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã"
                                            Width="140"
                                            Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Họ tên"
                                            Width="220"
                                            Binding="{Binding FullName}"/>
                            <DataGridTextColumn Header="SĐT"
                                            Width="140"
                                            Binding="{Binding Phone}"/>
                            <DataGridTextColumn Header="Địa chỉ"
                                            Width="*"
                                            Binding="{Binding Address}"/>
                            <DataGridTextColumn Header="Số Pet"
                                            Width="90"
                                            Binding="{Binding PetCount}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- ========== RIGHT FORM ========== -->
            <Border Grid.Column="2"
                Background="White"
                CornerRadius="14"
                BorderBrush="#FFE6E8F0"
                BorderThickness="1"
                Padding="14">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="18"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Thông tin Chủ nuôi"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#FF111827"/>

                    <!-- FULLNAME -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Họ tên"
                               FontSize="12"
                               Foreground="#FF6B7280"
                               Margin="2,0,0,6"/>
                        <Border Background="#FFF9FAFC"
                            BorderBrush="#FFE6E8F0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10">
                            <TextBox x:Name="txtFullName"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="13"
                                 Height="26"/>
                        </Border>
                    </StackPanel>

                    <!-- PHONE -->
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Số điện thoại"
                               FontSize="12"
                               Foreground="#FF6B7280"
                               Margin="2,0,0,6"/>
                        <Border Background="#FFF9FAFC"
                            BorderBrush="#FFE6E8F0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10">
                            <TextBox x:Name="txtPhone"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="13"
                                 Height="26"/>
                        </Border>
                    </StackPanel>

                    <!-- ADDRESS -->
                    <StackPanel Grid.Row="6">
                        <TextBlock Text="Địa chỉ"
                               FontSize="12"
                               Foreground="#FF6B7280"
                               Margin="2,0,0,6"/>
                        <Border Background="#FFF9FAFC"
                            BorderBrush="#FFE6E8F0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10">
                            <TextBox x:Name="txtAddress"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="13"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- ROW 1 BUTTON -->
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnAdd"
                            Content="➕ Thêm"
                            Click="BtnAdd_Click"
                            Height="42"
                            Background="#FF16A34A"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"/>

                        <Button x:Name="btnEdit"
                            Grid.Column="2"
                            Content="✏️ Sửa"
                            Click="BtnEdit_Click"
                            Height="42"
                            Background="#FFF59E0B"
                            Foreground="#FF111827"
                            FontSize="13"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    </Grid>

                    <!-- ROW 2 BUTTON -->
                    <Grid Grid.Row="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnDelete"
                            Content="🗑️ Xoá"
                            Click="BtnDelete_Click"
                            Height="42"
                            Background="#FFEF4444"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"/>

                        <Button x:Name="btnClear"
                            Grid.Column="2"
                            Content="🧹 Clear"
                            Click="BtnClear_Click"
                            Height="42"
                            Background="#FFF3F4F6"
                            Foreground="#FF111827"
                            BorderBrush="#FFE6E8F0"
                            BorderThickness="1"
                            Cursor="Hand"/>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
