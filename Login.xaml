<Window x:Class="Nhóm_7.Login"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Đăng nhập" Width="980" Height="560"
    WindowStartupLocation="CenterScreen"
    Background="#F6F7FB"
    FontFamily="Segoe UI"
    ResizeMode="NoResize">

    <Window.Resources>
        <Color x:Key="Stroke">#E6E8F0</Color>
        <Color x:Key="Text">#111827</Color>
        <Color x:Key="Text2">#6B7280</Color>
        <Color x:Key="Accent">#6D28D9</Color>

        <SolidColorBrush x:Key="StrokeBrush" Color="{StaticResource Stroke}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource Text}"/>
        <SolidColorBrush x:Key="Text2Brush" Color="{StaticResource Text2}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

        <DropShadowEffect x:Key="SoftShadow" BlurRadius="18" ShadowDepth="4" Opacity="0.10" Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="22"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="R" CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.86"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#F6F7FB"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="22">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="18"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Banner -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="44" Height="44" CornerRadius="14" Background="{StaticResource AccentBrush}">
                            <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="White"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="PetCare Manager"
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="Bold"
                                   FontSize="18"/>
                            <TextBlock Text="Đăng nhập để tiếp tục"
                                   Foreground="{StaticResource Text2Brush}"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="1"
                    Margin="0,18,0,0"
                    CornerRadius="16"
                    Background="#F6F7FB"
                    BorderBrush="{StaticResource StrokeBrush}"
                    BorderThickness="1"
                    Padding="16">
                    <StackPanel>
                        <TextBlock Text="• Tài khoản được cấp sẵn cho người dùng"
                               Foreground="{StaticResource Text2Brush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                        <TextBlock Text="• Nếu quên mật khẩu, liên hệ quản trị"
                               Foreground="{StaticResource Text2Brush}"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Right: Login form -->
        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Đăng nhập"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"/>

                <TextBlock Grid.Row="0"
                       Margin="0,34,0,0"
                       Text="Nhập tài khoản được cấp để vào hệ thống."
                       Foreground="{StaticResource Text2Brush}"
                       FontSize="12"/>

                <!-- Username -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Tên đăng nhập"
                           Foreground="{StaticResource Text2Brush}"
                           FontSize="12"
                           Margin="2,0,0,6"/>
                    <Border Style="{StaticResource InputBox}">
                        <DockPanel>
                            <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="{StaticResource Text2Brush}"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                            <TextBox x:Name="txtUsername"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextBrush}"
                                 FontSize="13"
                                 Height="26"
                                 VerticalContentAlignment="Center"/>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="Mật khẩu"
                           Foreground="{StaticResource Text2Brush}"
                           FontSize="12"
                           Margin="2,0,0,6"/>
                    <Border Style="{StaticResource InputBox}">
                        <DockPanel>
                            <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="{StaticResource Text2Brush}"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                            <PasswordBox x:Name="pbPassword"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Height="26"/>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <!-- Login button -->
                <Button Grid.Row="6"
                    Style="{StaticResource AccentButton}"
                    Content="Đăng nhập"
                    IsDefault="True"
                    Click="BtnLogin_Click"/>

                <!-- Message -->
                <Border Grid.Row="8"
                    Background="#F6F7FB"
                    BorderBrush="{StaticResource StrokeBrush}"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="12">
                    <TextBlock x:Name="txtMessage"
                           Text="Vui lòng nhập tài khoản."
                           Foreground="{StaticResource Text2Brush}"
                           TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
