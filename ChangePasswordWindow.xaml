<Window x:Class="Nhóm_7.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi mật khẩu"
        Width="520" Height="440"
        WindowStartupLocation="CenterOwner"
        Background="#F6F7FB"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="StrokeBrush" Color="#E6E8F0"/>
        <SolidColorBrush x:Key="TextBrush" Color="#111827"/>
        <SolidColorBrush x:Key="Text2Brush" Color="#6B7280"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#6D28D9"/>
        <DropShadowEffect x:Key="SoftShadow" BlurRadius="18" ShadowDepth="4" Opacity="0.10" Color="#000000"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
        </Style>

        <Style x:Key="InputBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#F6F7FB"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="R" CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="R" Property="Opacity" Value="0.86"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource AccentButton}">
            <Setter Property="Background" Value="#F6F7FB"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel>
                    <TextBlock Text="Đổi mật khẩu"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Nhập mật khẩu cũ và đặt mật khẩu mới."
                               Margin="0,4,0,0"
                               FontSize="12"
                               Foreground="{StaticResource Text2Brush}"/>
                </StackPanel>

                <!-- Form (scroll để không bị cắt) -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,2,0,0">

                        <TextBlock Text="Mật khẩu cũ"
                                   Foreground="{StaticResource Text2Brush}"
                                   FontSize="12"
                                   Margin="2,0,0,6"/>
                        <Border Style="{StaticResource InputBox}">
                            <PasswordBox x:Name="pbOld"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Height="26"/>
                        </Border>

                        <TextBlock Text="Mật khẩu mới"
                                   Foreground="{StaticResource Text2Brush}"
                                   FontSize="12"
                                   Margin="2,14,0,6"/>
                        <Border Style="{StaticResource InputBox}">
                            <PasswordBox x:Name="pbNew"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Height="26"/>
                        </Border>

                        <TextBlock Text="Nhập lại mật khẩu mới"
                                   Foreground="{StaticResource Text2Brush}"
                                   FontSize="12"
                                   Margin="2,14,0,6"/>
                        <Border Style="{StaticResource InputBox}">
                            <PasswordBox x:Name="pbConfirm"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Height="26"/>
                        </Border>

                        <TextBlock x:Name="txtError"
                                   Margin="0,12,0,0"
                                   Foreground="{StaticResource Text2Brush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource GhostButton}"
                            Width="120"
                            Content="Đóng"
                            Click="BtnClose_Click"/>
                    <Button Style="{StaticResource AccentButton}"
                            Width="160"
                            Margin="10,0,0,0"
                            Content="Cập nhật"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>